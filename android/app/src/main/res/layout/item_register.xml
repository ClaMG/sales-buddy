<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.adapter.AdpterRegister">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <EditText
                android:id="@+id/txItemAdd"
                android:layout_width="330dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/tx_register"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="@string/txItems"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColor="@color/pink"
                android:textColorHint="@color/blueGray" />

            <ImageButton
                android:id="@+id/btnSume"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_register_sume"
                app:srcCompat="@drawable/icon_sume" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>